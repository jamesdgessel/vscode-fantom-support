{
  "name": "fantom-support",
  "publisher": "SkyforgeAnalytics",
  "displayName": "fantom-support",
  "description": "Support for Fantom language",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesdgessel/vscode-fantom-support"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "fantom",
        "aliases": [
          "Fantom",
          "fantom"
        ],
        "extensions": [
          ".fan"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fantom",
        "scopeName": "source.fantom",
        "path": "./syntaxes/fantom.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fantomDocs",
          "title": "Fantom Docs",
          "icon": "./resources/icons/fantom-icon.svg"
        }
      ]
    },
    "views": {
      "fantomDocs": [
        {
          "id": "fantomDocsTree",
          "name": "Fantom Documentation"
        },
        {
          "id": "fantomDocsDetails",
          "name": "Slot Details",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "fantomDocs.showDetails",
        "title": "Show Slot Details"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd server && npm install",
    "lint": "eslint src",
    "test": "vscode-test",
    "prepare": "npm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  }
}
