{
  "name": "fantom-support",
  "version": "0.0.1",
  "publisher": "jamesdgessel",
  "displayName": "Fantom Language Support",
  "description": "Support for Fantom language in VSCode.",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesdgessel/vscode-fantom-support"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/client/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "fantom",
        "aliases": [
          "Fantom",
          "fantom"
        ],
        "extensions": [
          ".fan"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fantom",
        "scopeName": "source.fantom",
        "path": "./client/syntaxes/fantom.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fantomDocs",
          "title": "Fantom Docs",
          "icon": "./resources/icons/fantom-icon.svg"
        }
      ]
    },
    "views": {
      "fantomDocs": [
        {
          "id": "fantomDocsTree",
          "name": "Fantom Documentation"
        },
        {
          "id": "fantomDocsDetails",
          "name": "Slot Details",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "fantomDocs.showDetails",
        "title": "Show Slot Details"
      }
    ]
  },
  "scripts": {
    "build": "npm run compile",
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "tsc -b ./client/tsconfig.json",
    "compile:server": "tsc -b ./server/tsconfig.json && npm run copy:fan",
    "copy:fan": "copyfiles -u 2 \"server/**/*.fan\" \"out/server\"",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "watch": "npm-run-all --parallel watch:client watch:server"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "private": true,
  "workspaces": [
    "client",
    "server"
  ]
}
